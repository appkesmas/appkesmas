<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="#f58634" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp" android:color="#435CDC" />
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>